#include <LiquidCrystal.h>
LiquidCrystal lcd(12, 11, 5, 4, 3, 2);
const int switchPin = 6;
int switchState = 0;
int prevSwitchState = 0;
int reply;

void setup() {
  lcd.begin(16,2);
  pinMode(switchPin, INPUT);
  lcd.print("Shake Me!");
  lcd.setCursor(0,1);
  lcd.print("Gently, Please");
 }

void loop() {
  switchState = digitalRead(switchPin);
  if(switchState != prevSwitchState){
    if(switchState == LOW){
      reply = random(8);
      
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("Shake Level:");
      lcd.setCursor(0,1);

      switch(reply){
        case 0:
        lcd.print("Harder!");
        break;
        case 1:
        lcd.print("I'm sick now...");
        break;
        case 2:
        lcd.print("Faster!");
        break;
        case 3:
        lcd.print("Shakemaster!");
        break;
        case 4:
        lcd.print("Great hands.");
        break;
        case 5:
        lcd.print("Stop! Enough!");
        break;
        case 6:
        lcd.print("Maraca time!");
        break;
        case 7:
        lcd.print("Uh, You Shaking?");
        break;
        }
      }
    }
  prevSwitchState = switchState;
}
